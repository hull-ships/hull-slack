{
  "name": "hull-slack",
  "description": "Send Notifications to Slack",
  "picture": "picture.png",
  "version": "1.0.0",
  "tags": [
    "incoming",
    "outgoing",
    "oneColumn",
    "kraken"
  ],
  "settings": [],
  "private_settings": [
    {
      "name": "token",
      "title": "Token",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "team_id",
      "title": "team_id",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "user_id",
      "title": "user_id",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "scope",
      "title": "scope",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "bot",
      "title": "Bot",
      "type": "object",
      "format": "hidden",
      "options": {
        "edit_label": "Compose Message"
      },
      "properties": {
        "bot_user_id": {
          "title": "bot_user_id",
          "type": "string"
        },
        "bot_access_token": {
          "title": "bot_access_token",
          "type": "string"
        }
      }
    },
    {
      "name": "Workflow",
      "type": "object",
      "title": "Message",
      "format": "workflow",
      "properties": {
        "segments": {
          "title": "segment",
          "type": "array",
          "format": "segment",
          "options": {
            "standard": {
              "ALL": "Any Segment"
            }
          }
        },
        "triggers": {
          "title": "event",
          "type": "array",
          "format": "event",
          "options": {
            "standard": {
              "HULL_ENTER_SEGMENT": "Entering Segment",
              "HULL_LEAVE_SEGMENT": "Leaving Segment",
              "ANY": "Any Action"
            }
          }
        },
        "action": {
          "type": "object",
          "format": "composer",
          "title": "Edit Message",
          "options": {
            "preview": "/preview"
          },
          "properties": {
            "channel": {
              "title": "Channel or User",
              "type": "string",
              "format": "liquid",
              "options": {
                "lines": "single",
                "preview": false
              }
            },
            "message": {
              "title": "Message",
              "type": "string",
              "format": "liquid",
              "options": {
                "preview": true,
                "help": "[_Slack-specific_ formatting](https://api.slack.com/docs/message-formatting) supported."
              }
            }
          }
        }
      }
    },
    {
      "name": "attachements",
      "title": "Attachements",
      "description": "Pick some user attributes to append to every message posted to Slack",
      "type": "array",
      "format": "trait"
    }
  ],
  "resources": [],
  "readme": "readme.md",
  "tabs": [
    {
      "title": "Credentials",
      "url": "/auth/",
      "size": "small",
      "editable": false
    }
  ],
  "ui": false,
  "subscriptions": [
    {
      "url": "/smart-notifier"
    }
  ],
  "schedules": [
    {
      "url": "/status",
      "type": "interval",
      "value": "5"
    }
  ]
}
